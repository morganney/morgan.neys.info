extends layout

block page
  header#header.jumbotron
    h1.
      <img src='http://www.gravatar.com/avatar/c6027f211114989359f1ff7e076c98be?s=225' class='img-circle' alt='M.N.' />
      Hi, I'm <a href='http://bizzybytes.com'>Morgan Ney</a>
    p: a.btn.btn-primary.btn-lg(href='', data-toggle='modal', data-target='#dude') Who's That?
    #dude.modal.modal-fade
      .modal-dialog
        .modal-content
          .modal-header
            button(type="button", class="close", data-dismiss="modal", aria-hidden="true") &times;
            h2.modal-title Me? Well, I'm ...
          .modal-body
            p.
              <span class='glyphicon glyphicon-user'></span> <span class='glyphicon glyphicon-headphones'></span>
              &nbsp; Just another random dude on the Internet ...
          .modal-footer
            button(type="button", class="btn btn-default", data-dismiss="modal") Close
  #interests.panel.panel-primary
    .panel-heading: h2.panel-title Interests
    ul.list-group
      li.list-group-item: a(href='http://www.youtube.com/watch?v=dlPs10GSJjQ') Zeitgeist: Moving Forward
      li.list-group-item: a(href='http://www.thevenusproject.com/') The Venus Project
      li.list-group-item: a(href='http://www.amazon.com/TWA-Flight-800-Kristina-Borjesson/dp/B00FWLGTW0').
       Flight TWA 800 (WTF!?)
      li.list-group-item: a(href='http://en.wikipedia.org/wiki/Riemann_hypothesis') The Riemann Hypothesis
      li.list-group-item: a(href='http://www.thevenusproject.com/about/resource-based-economy') Resource Based Economy
      li.list-group-item: a(href='http://en.wikipedia.org/wiki/Local_food') Local Organic Food & Farming
      li.list-group-item: a(href='http://bizzybytes.com') Web Development
  #abominations.panel.panel-primary
    .panel-heading: h2.panel-title Abominations
    ul.list-group
      li.list-group-item Politics
      li.list-group-item Banking / Money / Federal Reserve
      li.list-group-item Marketing / Advertising<br />(mostly euphemisms for lying & deceiving)
      li.list-group-item Standard American Diet (S.A.D.)
      li.list-group-item.
       <a href='http://en.wikipedia.org/wiki/Two-party_system'>Two-party System</a>
       (<a href='http://www.youtube.com/watch?v=S5ZRRimf3Ps'>why do we stand for this?</a>)
  #hobbies.panel.panel-primary
    .panel-heading: h2.panel-title Hobbies
    ul.list-group
      li.list-group-item: a(href='') Woodworking
      li.list-group-item: a(href='http://www.kennelboxing.com/') Exercise
      li.list-group-item: a(href='/hobbies/motorcycles') Motorcycles
      li.list-group-item: a(href='') Gardening
      li.list-group-item: a(href='/hobbies/writing') Writing

  #places.panel.panel-primary
    .panel-heading: h2.panel-title Places I've Lived
    #map.panel-body
block scripts
  script(src='/public/js/index.js')
